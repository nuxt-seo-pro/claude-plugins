{
  "name": "nuxtseo-content",
  "version": "0.10.0",
  "description": "SEO content skills: write docs/articles/landing pages, audit existing content, keyword/market research. Integrates with Nuxt SEO Pro MCP for real keyword and SERP data.",
  "author": {
    "name": "Harlan Wilton",
    "email": "harlan@harlanzw.com"
  },
  "license": "MIT",
  "keywords": [
    "seo",
    "content",
    "writing",
    "documentation",
    "nuxt"
  ],
  "repository": "https://github.com/nuxtseo/claude-plugins",
  "hooks": [
    {
      "event": "PreToolUse",
      "matchTool": "Write",
      "matchFileGlob": "content/**/*.md",
      "prompt": "${CLAUDE_PLUGIN_ROOT}/.claude-plugin/hooks/seo-write-guard.md"
    },
    {
      "event": "SessionStart",
      "prompt": "${CLAUDE_PLUGIN_ROOT}/.claude-plugin/hooks/site-config-check.md"
    }
  ]
}
